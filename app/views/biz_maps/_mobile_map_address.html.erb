<div class="fixed top-0 bottom-0 left-0 right-0 z-50 bg-black bg-opacity-50 flex items-center px-4" style="display: none;" x-show="show_company == '<%= c -%>'" x-on:click="show_company=''">
  <div class="w-full p-4 bg-white rounded-md shadow-md">
    <% marks.each do |m| %>
      <% if m.alt_name.present? %>
        <h1 class="font-medium pb-1 <%= fdsz('text-xl') -%> leading-normal"><%= m.long_name -%></h1>
        <h1 class="<%= fdsz('text-xl') -%> font-medium pb-1 leading-normal"><%= m.alt_name -%></h1>
      <% else %>
        <h1 class="font-medium pb-1 <%= fdsz('text-xl') -%> leading-normal"><%= m.long_name -%></h1>
      <% end %>
      <div class="flex">
        <label class="flex-none leading-normal"><%= t('map.address') -%>：</label>
        <div>
          <p class="leading-normal"><%= m.address -%></p>
        </div>
      </div>
      <% if m.tel.present? || m.marketing_phone.present? || m.media_phone.present? %>
        <div class="flex">
          <label class="flex-none leading-normal"><%= t('map.tel') -%>：</label>
          <div>
            <% if m.tel.present? %>
              <p class="leading-normal"><%= m.tel -%></p>
            <% end %>
            <% if m.marketing_phone.present? %>
              <p class="leading-normal"><%= m.marketing_phone -%></p>
            <% end %>
            <% if m.media_phone.present? %>
              <p class="leading-normal"><%= m.media_phone -%></p>
            <% end %>
          </div>
        </div>
      <% end %>
      <% if m.fax.present? %>
        <div class="flex">
          <label class="flex-none leading-normal"><%= t('map.fax') -%>：</label>
          <div>
            <p class="leading-normal"><%= m.fax -%></p>
          </div>
        </div>
      <% end %>
      <% if m.website_name.present? %>
        <div class="flex">
          <label class="flex-none leading-normal">网址：</label>
          <div>
            <p class="leading-normal"><%= link_to m.website_name, m.website_url -%></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
