<div class="fixed inset-0 bg-black bg-opacity-50 flex items-center px-4" style="display: none; z-index: 9999;" x-show="show_company == '<%= c -%>'" x-on:click="show_company=''">
  <div class="w-full max-h-full p-4 bg-white rounded-md shadow-md overflow-auto">
    <% marks.each do |m| %>
      <h1 class="font-medium pb-1 <%= fdsz('text-xl') -%> leading-normal"><%= m.long_name -%></h1>
      <% if m.alt_name.present? %>
        <% m.alt_name.split('|||').each do |name| %>
          <h1 class="<%= fdsz('text-xl') -%> font-medium leading-normal"><%= name -%></h1>
        <% end %>
      <% end %>
      <% if m.address.present? %>
        <div class="flex mt-1">
          <label class="flex-none leading-normal"><%= t('map.address') -%>：</label>
          <div>
            <% m.address.split('|||').each do |address| %>
              <p class="leading-normal"><%= address -%></p>
            <% end %>
          </div>
        </div>
      <% end %>
      <% if m.tel.present? || m.marketing_phone.present? || m.media_phone.present? %>
        <div class="flex">
          <label class="flex-none leading-normal"><%= t('map.tel') -%>：</label>
          <div>
            <% if m.tel.present? %>
              <% m.tel.split('|||').each do |tel| %>
                <p class="leading-normal"><%= tel -%></p>
              <% end %>
            <% end %>
            <% if m.marketing_phone.present? %>
              <p class="leading-normal"><%= m.marketing_phone -%></p>
            <% end %>
            <% if m.media_phone.present? %>
              <p class="leading-normal"><%= m.media_phone -%></p>
            <% end %>
          </div>
        </div>
      <% end %>
      <% if m.fax.present? %>
        <div class="flex">
          <label class="flex-none leading-normal"><%= t('map.fax') -%>：</label>
          <div>
            <p class="leading-normal"><%= m.fax -%></p>
          </div>
        </div>
      <% end %>
      <% if m.website_name.present? %>
        <div class="flex">
          <label class="flex-none leading-normal">网址：</label>
          <div>
            <p class="leading-normal"><%= link_to m.website_name, m.website_url -%></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
