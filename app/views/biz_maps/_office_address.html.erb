<div class="w-full lg:w-1/2 leading-loose my-2 lg:my-6">
  <% if m.alt_name.present? %>
    <h1 class="<%= fdsz("text-lg sm:text-lg font-semibold", "text-lg sm:text-3xl font-medium") -%> leading-normal sm:leading-tight"><%= m.long_name -%></h1>
    <h1 class="<%= fdsz("text-lg sm:text-lg font-semibold", "text-lg sm:text-3xl font-medium") -%> pb-1 leading-normal"><%= m.alt_name -%></h1>
  <% else %>
    <h1 class="<%= fdsz("text-lg sm:text-lg font-semibold", "text-lg sm:text-3xl font-medium") -%> leading-normal sm:leading-tight pb-2"><%= m.long_name -%></h1>
  <% end %>
  <div class="flex <%= fdsz("text-sm", "text-xl") -%>">
    <label class="flex-none leading-normal"><%= t('map.address') -%>：</label>
    <div>
      <p class="leading-normal"><%= m.address -%></p>
    </div>
  </div>
  <% if m.tel.present? || m.marketing_phone.present? || m.media_phone.present? %>
    <div class="flex <%= fdsz("text-sm", "text-xl") -%>">
      <label class="flex-none leading-normal"><%= t('map.tel') -%>：</label>
      <div>
        <% if m.tel.present? %>
          <p class="leading-normal"><%= m.tel -%></p>
        <% end %>
        <% if m.marketing_phone.present? %>
          <p class="leading-normal"><%= m.marketing_phone -%> (<%= t('map.marketing') -%>)</p>
        <% end %>
        <% if m.media_phone.present? %>
          <p class="leading-normal"><%= m.media_phone -%> (<%= t('map.media') -%>)</p>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if m.fax.present? %>
    <div class="flex <%= fdsz("text-sm", "text-xl") -%>">
      <label class="flex-none leading-normal"><%= t('map.fax') -%>：</label>
      <div>
        <p class="leading-normal"><%= m.fax -%></p>
      </div>
    </div>
  <% end %>
  <% if m.website_name.present? %>
    <div class="flex <%= fdsz("text-sm", "text-xl") -%>">
      <label class="flex-none leading-normal">网址：</label>
      <div>
        <p class="leading-normal"><%= link_to m.website_name, m.website_url -%></p>
      </div>
    </div>
  <% end %>
</div>
