<div class="absolute inset-x-0 top-0 xxl:top-12 xxxl:top-20" style="display: none;" x-show="show_company == '<%= c -%>'">
  <div class="w-full mx-auto sm:px-8 md:px-12 lg:px-16 xl:px-24 xxl:px-32">
    <% mlp = m.marketing_phone.present? ? 'ml-20' : 'ml-12' %>
    <div class="bg-thape-white-t80 p-2 border border-2 border-gray-300 w-full leading-loose">
      <% if m.alt_name.present? %>
        <h1 class="<%= fdsz("text-xl sm:text-lg", "text-xl sm:#{xlFzClass(2)}") -%> font-medium leading-tight"><%= m.long_name -%></h1>
        <h1 class="<%= fdsz("text-xl sm:text-lg", "text-xl sm:#{xlFzClass(2)}") -%> font-medium pb-1"><%= m.alt_name -%></h1>
      <% else %>
        <h1 class="<%= fdsz("text-xl sm:text-lg", "text-xl sm:#{xlFzClass(2)}") -%> font-medium leading-tight pb-2"><%= m.long_name -%></h1>
      <% end %>
      <div class="<%= fdsz("text-sm", "#{xlFzClass(4)}") -%>">
        <label class="float-left"><%= t('map.address') -%>：</label>
        <p class="<%= mlp -%>"><%= m.address -%></p>
        <% if m.tel.present? %>
          <label class="float-left"><%= t('map.tel') -%>：</label>
          <p class="<%= mlp -%>"><%= m.tel -%></p>
        <% end %>
        <% if m.marketing_phone.present? %>
          <label class="float-left"><%= t('map.marketing') -%>：</label>
          <p class="<%= mlp -%>"><%= m.marketing_phone -%></p>
        <% end %>
        <% if m.media_phone.present? %>
          <label class="float-left"><%= t('map.media') -%>：</label>
          <p class="<%= mlp -%>"><%= m.media_phone -%></p>
        <% end %>
        <% if m.fax.present? %>
          <label class="float-left"><%= t('map.fax') -%>：</label>
          <p class="<%= mlp -%>"><%= m.fax -%></p>
        <% end %>
        <% if m.website_name.present? %>
          <label class="float-left">网址：</label>
          <p class="<%= mlp -%>"><%= link_to m.website_name, m.website_url -%></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
