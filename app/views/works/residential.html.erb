<%= render partial: 'shared/thape_nav'  -%>

<div class="w-full mx-auto px-2 md:px-6 lg:px-8 xl:px-10 xxl:px-12 xxxl:px-16">
  <%- content_for :header_right do %>
    <div class="block w-full mt-2 sm:w-full lg:w-auto sm:mt-4 lg:mt-0">
      <%= render partial: 'search_form' %>
    </div>
  <% end %>
  <%= render partial: 'shared/header', locals: { c: '居住', e: 'RESIDENTIAL',
    header_path: residential_works_path, header_class: 'border-gray-200 border-solid border-b', show_header_right: true } %>

  <ol class="pt-3 <%= fdsz("text-sm", "#{xlFzClass(5)}") -%>">
    <li class="inline-block">
      <a href="<%= root_path -%>" class="text-black6c">首页</a>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= works_path -%>" class="text-black6c">所有项目</a>
    </li>
    <li class="breadcrumb-item" class="text-black6c">
      <a href="<%= residential_works_path -%>">居住</a>
    </li>
  </ol>
</div>
<div class="w-full mx-auto sm:pb-4 md:pb-8 px-1 md:px-3 lg:px-4 xl:px-5 xxl:px-6 xxxl:px-8">
  <div class="flex-grid mt-8 mb-4">
    <div class="flex-grid-box flex-grid-cols-1-gap-1 sm:flex-grid-cols-1-gap-2 md:flex-grid-cols-2-gap-2 lg:flex-grid-cols-3-gap-2">
      <div class="relative overflow-hidden">
        <a href="<%= residential_residence_works_path -%>" class="cursor-pointer">
          <%= image_pack_tag 'media/images/residential-1.jpg', class: 'grid-image hover:scale-105' -%>
          <div class="absolute text-white left-6 bottom-4">
            <p class="<%= fdsz("text-lg sm:text-2xl", "text-lg sm:#{xlFzClass(1)}") -%> text-left pb-1 font-medium leading-none sm:leading-tight">精品住宅</p>
            <p class="<%= fdsz("text-base sm:text-lg", "text-base sm:#{xlFzClass(3)}") -%> text-left leading-snug">RESIDENCE</p>
          </div>
        </a>
      </div>
      <div class="relative overflow-hidden">
        <a href="<%= residential_community_works_path -%>" class="cursor-pointer">
          <%= image_pack_tag 'media/images/residential-2.jpg', class: 'grid-image hover:scale-105' -%>
          <div class="absolute text-white left-6 bottom-4">
            <p class="<%= fdsz("text-lg sm:text-2xl", "text-lg sm:#{xlFzClass(1)}") -%> text-left pb-1 font-medium leading-none sm:leading-tight">综合社区</p>
            <p class="<%= fdsz("text-base sm:text-lg", "text-base sm:#{xlFzClass(3)}") -%> text-left leading-snug">COMMUNITY</p>
          </div>
        </a>
      </div>
      <div class="relative overflow-hidden">
        <a href="<%= residential_rental_works_path -%>" class="cursor-pointer">
          <%= image_pack_tag 'media/images/residential-3.jpg', class: 'grid-image hover:scale-105' -%>
          <div class="absolute text-white left-6 bottom-4">
            <p class="<%= fdsz("text-lg sm:text-2xl", "text-lg sm:#{xlFzClass(1)}") -%> text-left pb-1 font-medium leading-none sm:leading-tight">租赁住房</p>
            <p class="<%= fdsz("text-base sm:text-lg", "text-base sm:#{xlFzClass(3)}") -%> text-left leading-snug">RENTAL</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'shared/footer' %>
