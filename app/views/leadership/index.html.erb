<% provide(:title, "集团高管") %>
<% provide(:meta_title, "集团高管") %>

<%= render partial: 'shared/thape_nav' -%>

<div class="relative">
  <%= image_pack_tag 'images/people-banner-1.jpg', class: "w-full" -%>
</div>
<div class="relative pb-1 md:pb-3 lg:pb-4 xl:pb-5 xxl:pb-6 xxxl:pb-8">
  <%= render partial: 'search_form' %>

  <% if @management_people.present? %>
    <div class="w-full mx-auto sm:pb-4 sm:pt-0 lg:py-8 px-2 md:px-6 lg:px-8 xl:px-10 xxl:px-12 xxxl:px-16">
      <%= render partial: 'shared/header', locals: { c: '集团管理团队', e: 'MANAGEMENT',
        header_path: leadership_index_path, header_class: 'border-gray-200 border-solid border-b-0 lg:border-b', show_header_right: false } %>
    </div>

    <div class="w-full mx-auto px-1 md:px-3 lg:px-4 xl:px-5 xxl:px-6 xxxl:px-8">
      <div class="flex-grid">
        <div class="flex-grid-box flex-grid-cols-2-gap-1 sm:flex-grid-cols-2-gap-2 md:flex-grid-cols-3-gap-2 lg:flex-grid-cols-4-gap-2 xxl:flex-grid-cols-6-gap-2">
        <% @management_people.each do |person| %>
          <%= render partial: 'person_square',
            locals: { person: person, person_class: 'relative overflow-hidden', city: City.find_by!(company_name: '天华集团') } %>
        <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @speciality_people.present? %>
    <div class="w-full mx-auto sm:py-4 md:py-8 px-2 md:px-6 lg:px-8 xl:px-10 xxl:px-12 xxxl:px-16 mt-1 md:mt-3 lg:mt-4 xl:mt-5 xxl:mt-6 xxxl:mt-8">
      <%= render partial: 'shared/header', locals: { c: '集团专业团队', e: 'PROFESSIONAL',
        header_path: leadership_index_path, header_class: 'border-gray-200 border-solid border-b-0 lg:border-b', show_header_right: false } %>
    </div>

    <div class="w-full mx-auto px-1 md:px-3 lg:px-4 xl:px-5 xxl:px-6 xxxl:px-8">
      <div class="flex-grid">
        <div class="flex-grid-box flex-grid-cols-2-gap-1 sm:flex-grid-cols-2-gap-2 md:flex-grid-cols-3-gap-2 lg:flex-grid-cols-4-gap-2 xxl:flex-grid-cols-6-gap-2">
        <% @speciality_people.each do |person| %>
          <%= render partial: 'person_square',
            locals: { person: person, person_class: 'relative overflow-hidden', city: City.find_by!(company_name: '天华集团') } %>
        <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @management_people.blank? && @speciality_people.blank? %>
    <div class="flex mt-0 pt-20 sm:pt-32 pb-12 justify-center flex-wrap">
      <img class="flex-none" style="margin-left: 1rem" src="<%= asset_pack_path('static/images/no-data.png') -%>">
      <p class="w-full flex-none text-center mt-3" style="color: #b2b2b2;">暂无搜索结果</p>
    </div>
  <% end %>
</div>

<%= render partial: 'shared/footer' %>
