<%= render partial: 'shared/thape_nav'  -%>

<div class="w-full px-6 md:px-12 lg:px-32 xl:px-48 xxl:px-64 xxxl:px-72 publications">
  <div class="w-full">
    <%= render partial: 'shared/header', locals: { c: '作品集', e: 'PORTFOLIO',
      header_path: news_index_path, header_class: 'border-gray-200 border-solid border-b', show_header_right: false } %>
  </div>

  <div class="w-full mt-6 md:mt-12 xl:mt-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-16 gap-y-8 lg:gap-x-32 lg:gap-y-24 list">
      <% @works.each do |item| %>
      <%= render partial: 'list_item', locals: { data: item } %>
      <% end %>
    </div>
  </div>

  <div class="relative w-full mt-6 md:mt-12 lg:mt-24">
    <%= render partial: 'shared/header', locals: { c: '学术研究与出版物', e: 'RESEARCH & PUBLICATIONS',
      header_path: news_index_path, header_class: 'border-gray-200 border-solid border-b', show_header_right: false } %>
    <div class="flex relative mt-4 lg:mt-0 lg:absolute lg:right-0 lg:top-2 text-base lg:text-lg">
      <a class="px-3 py-1 rounded-2xl text-white bg-black6c lg:bg-transparent lg:text-black6c font-semibold" href="#">专著书籍</a>
      <a class="px-3 py-1 rounded-2xl bg-thape-dark-gray mx-4 sm:mx-6 lg:mx-10 lg:bg-transparent text-thape-copyright-gray" href="#">规范标准</a>
      <a class="px-3 py-1 rounded-2xl bg-thape-dark-gray lg:bg-transparent text-thape-copyright-gray" href="#">论文专利</a>
    </div>
  </div>

  <div class="w-full pb-6 md:pb-12 lg:pb-24 mt-6 md:mt-12 xl:mt-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-16 gap-y-8 lg:gap-x-32 lg:gap-y-24 list">
      <% @publications.each do |item| %>
      <%= render partial: 'list_item', locals: { data: item } %>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: 'shared/footer' %>