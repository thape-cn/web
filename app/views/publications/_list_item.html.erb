<div class="item">
  <div class="cover">
    <div class="wrapper">
      <div class="book hidden lg:block" style="width: <%= item[:width] %>; height: <%= item[:height] %>">
        <!-- Front -->
        <div class="book-front">
          <div>
            <img src="<%= item[:cover] %>" alt="">
          </div>
          <div></div>
        </div>
        <!-- Pages -->
        <div class="book-page book-page-1"></div>
        <div class="book-page book-page-2"></div>
        <div class="book-page book-page-3">
          <% if item[:page_cover].present? %>
          <img class="w-full h-full" style="transform: rotateY(180deg);" src="<%= item[:page_cover] %>" alt="">
          <% end %>
        </div>
        <div class="book-page book-page-4">
          <div class="absolute top-0 left-0 w-full h-full flex justify-center items-center">
            <div class="hidden lg:flex rounded border border-solid overflow-hidden <%= item[:preview_url].present? ? 'border-black6c' : 'bordr-thape-dark-gray' %>">
              <a class="px-3 py-1 text-sm font-medium text-black bg-transparent shadow-sm transition duration-150 ease-in-out <%= item[:preview_url].present? ? 'text-black hover:bg-black6c hover:text-white' : 'bordr-thape-dark-gray text-thape-guest-gray cursor-not-allowed' %>"
                href="<%= item[:preview_url] %>"
                onclick="return <%= item[:preview_url].present? %>"
                target="_blank"><%= t('publication.preview') %></a>
            </div>
          </div>
        </div>
        <div class="book-page book-page-5"></div>
        <!-- Back -->
        <div class='book-back'>
          <div>
            <img src="<%= item[:cover] %>" alt="">
          </div>
          <div></div>
        </div>
      </div>
      <div class="w-full h-full flex lg:hidden items-end">
        <div class="mobile-book" style="width: <%= item[:width] %>; height: <%= item[:height] %>">
          <img class="w-full h-full" src="<%= item[:mobile_cover] %>" alt="">
        </div>
      </div>
    </div>
  </div>
  <div class="description text-left mt-0 md:mt-6 xl:mt-8">
    <div class="relative title tracking-wider font-semibold text-black6c <%= fdsz("text-base sm:text-lg lg:text-2xl", "text-base sm:text-2xl lg:text-3xl") -%>"><%= item[:title] %></div>
    <% if item[:subtitle].present? %>
    <div class="subtitle tracking-wider font-normal text-thape-copyright-gray <%= fdsz("text-xs sm:text-base lg:text-lg", "text-xs sm:text-xl lg:text-2xl") -%>"><%= item[:subtitle] %></div>
    <% end %>
    <div class="btns lg:hidden mt-4">
      <div>
        <a class="inline-block px-6 py-1 rounded border border-solid text-sm font-medium bg-transparent shadow-sm transition duration-150 ease-in-out <%= item[:preview_url].present? ? 'border-black6c text-black hover:bg-black6c hover:text-white' : 'bordr-thape-dark-gray text-thape-guest-gray cursor-not-allowed' %>"
          href="<%= item[:preview_url] %>"
          onclick="return <%= item[:preview_url].present? %>"
          target="_blank"><%= t('publication.preview') %></a>
      </div>
    </div>
  </div>
</div>
