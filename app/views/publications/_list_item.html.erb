<div class="item">
  <div class="cover">
    <div class="wrapper">
      <div class="book hidden lg:block" style="width: <%= item[:width] %>; height: <%= item[:height] %>">
        <!-- Front -->
        <div class="book-front">
          <div>
            <img src="<%= item[:cover] %>" alt="">
          </div>
          <div></div>
        </div>
        <!-- Pages -->
        <div class="book-page">
          <div class="book-page-item"></div>
          <div class="book-page-item"></div>
          <div class="book-page-item">
            <% if item[:page_cover].present? %>
            <img class="w-full h-full" style="transform: rotateY(180deg);" src="<%= item[:page_cover] %>" alt="">
            <% end %>
          </div>
          <div class="book-page-item">
            <div class="absolute top-0 left-0 w-full h-full flex justify-center items-center">
              <div class="hidden lg:flex rounded border border-solid border-black6c overflow-hidden">
                <a class="px-3 py-1 border-r border-solid border-black6c text-sm font-medium text-black bg-transparent shadow-sm hover:bg-black6c hover:text-white transition duration-150 ease-in-out"
                  href="<%= item[:preview_url] %>"
                  target="_blank">预览</a>
                <a class="px-3 py-1 text-sm font-medium text-black bg-transparent shadow-sm hover:bg-black6c hover:text-white transition duration-150 ease-in-out"
                  href="<%= item[:download_url] %>"
                  download
                  onclick="return false"
                  data-action="click->publications#downloadFile">下载</a>
              </div>
            </div>
          </div>
          <div class="book-page-item"></div>
        </div>
        <!-- Back -->
        <div class='book-back'>
          <div>
            <img src="<%= item[:cover] %>" alt="">
          </div>
          <div></div>
        </div>
      </div>
      <div class="w-full h-full flex lg:hidden items-end">
        <div class="mobile-book" style="width: <%= item[:width] %>; height: <%= item[:height] %>">
          <img class="w-full h-full" src="<%= item[:mobile_cover] %>" alt="">
        </div>
      </div>
    </div>
  </div>
  <div class="description text-left mt-0 md:mt-6 xl:mt-8">
    <div class="relative title tracking-wider font-semibold text-black6c <%= fdsz("text-base sm:text-lg lg:text-2xl", "text-base sm:text-2xl lg:text-3xl") -%>"><%= item[:title] %></div>
    <% if item[:subtitle].present? %>
    <div class="subtitle tracking-wider font-normal text-thape-copyright-gray <%= fdsz("text-xs sm:text-base lg:text-lg", "text-xs sm:text-xl lg:text-2xl") -%>"><%= item[:subtitle] %></div>
    <% end %>
    <div class="btns lg:hidden mt-4">
      <div>
        <a class="inline-block px-6 py-1 rounded border border-solid border-black6c text-sm font-medium text-black bg-transparent shadow-sm hover:bg-black6c hover:text-white transition duration-150 ease-in-out"
          href="<%= item[:preview_url] %>"
          target="_blank">预览</a>
      </div>
      <div>
        <a class="mt-4 inline-block px-6 py-1 rounded border border-solid border-black6c text-sm font-medium text-black bg-transparent shadow-sm hover:bg-black6c hover:text-white transition duration-150 ease-in-out"
          href="<%= item[:download_url] %>"
          download
          onclick="return false"
          data-action="click->publications#downloadFile">下载</a>
      </div>
    </div>
  </div>
</div>
